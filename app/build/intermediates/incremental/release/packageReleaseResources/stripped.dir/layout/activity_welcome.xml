<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Welcome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_logo"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/img_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_welcome"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/satrasia_apps"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/logo2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_logo2"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:contentDescription="@string/img_logo2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:translationZ="3dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_next"
            android:layout_gravity="right"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/lanjutkan"
            android:textColor="@color/black"
            android:background="@drawable/bg_rounded_top_white_75"
            android:padding="25dp"
            android:textSize="21sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <ImageView
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:src="@drawable/vector_circle"
        android:layout_marginTop="-250dp"
        android:layout_marginStart="-100dp"
        android:translationZ="1dp"
        android:contentDescription="@string/img_circle" />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:src="@drawable/vector_circle2"
        android:layout_marginTop="-350dp"
        android:layout_marginStart="-125dp"
        android:translationZ="2dp"
        android:contentDescription="@string/img_circle2" />

</LinearLayout>