<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Item -->
    <item android:top="4dp"> <!-- Margin atas untuk menunjukkan bayangan di bagian bawah saja -->
        <shape android:shape="rectangle">
            <solid android:color="@color/text_input" /> <!-- Warna bayangan -->
            <corners android:radius="30dp" /> <!-- Radius sudut sesuai kebutuhan -->
        </shape>
    </item>

    <!-- Main Shape Item -->
    <item android:bottom="4dp" > <!-- Mengurangi tinggi total untuk memberikan efek bayangan -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/pink_400"
                android:endColor="@color/pink_200"
                android:type="linear"
                android:angle="170"/>
            <corners
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"/>
        </shape>
    </item>
</layer-list>
